/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
view{letter-spacing: 4rpx;}
.fl{float: left;}
.fr{float: right;}
.clear{clear: both;}
.center{width: 700rpx;margin: 0 auto;}

.login_input_view{height: 100rpx; border: #ffffff 1rpx solid;border-bottom-color: #ccc;display: flex;align-items: center;margin-top:35rpx;}
.login_icon{width:60rpx;height:60rpx;line-height: 100rpx;align-items: center;}
.login_input{ height: 100%;width: 600rpx;margin-left: 15rpx;}
.login_button{height: 100rpx;background-color: #488bf4; color: #ffffff;border-radius: 50rpx;}
.login_code{color: #1188ec; border: 1rpx solid #ffffff;height: 60rpx; border-left-color: #ababab;line-height: 60rpx;align-items: center;padding-left: 25rpx;}
.login_bottom_txt{text-align: center;color:#ababab;}
